                        @Html.ActionLink("My Student", "MyStudent", "Teacher", new { id = Session["UserId"] })
                    </li>
                    <li class="divider" />
                    <li>
                        @Html.ActionLink("All Teacher", "AllTeacher", "GetAllUser")
                    </li>
                    <li>
                        @Html.ActionLink("All Student", "AllStudent", "GetAllUser")
                    </li>
                </ul>
            </div>
        }
        else
                    if (Session["RoleId"].ToString() == "3")
        {
            <div class="dropdown">
                <button class="btn  dropdown-toggle" type="button" data-toggle="dropdown">
                    Student
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink("Dashboard", "Dashboard", "Student", new { Email = Convert.ToString(Session["EmailInfo"]) }, htmlAttributes: new { title = "Dashboard" })
                    </li>
                    <li class="divider" />
                    <li>
                        @Html.ActionLink("All Teacher", "AllTeacher", "GetAllUser")
                    </li>
                    <li>
                        @Html.ActionLink("All Student", "AllStudent", "GetAllUser")
                    </li>
                    <li>
                        @Html.ActionLink("All Admin", "AllAdmin", "GetAllUser")
                    </li>
