@model IEnumerable<StudentProject.Models.SearchFilterViewModel>

@{
    ViewBag.Title = "Search";
}

<h2>Index</h2>


<table class="table table-condensed table-striped  table-bordered table-hover">
    <tr>
        <th>
            @Html.Label("First Name")
        </th>
        <th>
            @Html.Label("Last Name")
        </th>
        <th>
            @Html.Label("Date Of Birth")
        </th>
        <th>
            @Html.Label("Hobbies")
        </th>
        <th>
            @Html.Label("Email")
        </th>
        <th>
            @Html.Label("Password")
        </th>
        <th>
            @Html.Label("Gender")
        </th>
        <th>
            @Html.Label("IsVerified")
        </th>
        <th>
            @Html.Label("IsActive")
        </th>

        <th>
            @Html.Label("city")
        </th>
        <th>
            @Html.Label("Country")
        </th>
        <th>
            @Html.Label("State")
        </th>
        <th>
            @Html.Label("User Address")
        </th>
       
        <th>
            @Html.Label("zipcode")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hobbies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVerified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAddress)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>

            
        </tr>
    }

</table>

